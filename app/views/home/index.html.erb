<h1>PlamoTone</h1>
<%# カラー比較部分 %>
<div id="chart">
    <div id="left-chart" style="width:300px;height:300px;background-color:#000000;"></div>
    <div id="right-chart" style="width:300px;height:300px;background-color:#FF0000;"></div>
</div>

<%=link_to 'Add Color(Only Adiministraitor)', colors_path %>
<%=link_to 'Home', home_index_path %>

<%# 登録カラーリスト %>
<%= paginate @colors -%>
<div class="color-list">
    <% @colors.each do |color| %>
        <div class="color-item">
            <div style="width:200px;height:200px;background-color:#<%= color.code %>;"></div>
            <div>
                <p class="name-text"><%= color.name %></p>
                <p class="maker-text"><%= color.maker_id %></p>
            </div>
            <div>
            </div>
        </div>
    <% end %>
</div>
<%= paginate @colors -%>