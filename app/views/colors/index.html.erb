<p id="notice"><%= notice %></p>

<h1>Colors</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Color name</th>
      <th>Color code</th>
      <th>Maker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.zip(@makers) do |color,maker| %>
      <tr>
        <td><%= color.id %></td>
        <td><%= color.color_name %></td>
        <td style="background-color:#<%= color.color_code %>;"></td>
        <td><%= maker.maker_name %></td>
        <td><%= link_to 'Show', color %></td>
        <td><%= link_to 'Edit', edit_color_path(color) %></td>
        <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color', new_color_path %>
<%= link_to 'Edit Maker', makers_path %>
